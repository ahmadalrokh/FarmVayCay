@model ApplicationUser
<link rel="stylesheet" href="~/css/UserDetales.css">
<main class="main-container">
    <div class="user-profile-wrapper">
        <div class="profile-header">
            <div class="profile-image">
                @if(Model.ImageUrl!=null)
                {
                    <img src="@Model.ImageUrl" alt="Image"/>
                }
                else{
                    <img src="~/UserImage/ProfileImageIfNone.jpeg" alt="Image"/>
                }
                
            </div>
            
        </div>

        <form class="user-form">
            <div class="form-row">
                <div class="form-group">
                    <label>First name</label>
                    <input asp-for="FirstName" disabled>
                </div>

                <div class="form-group">
                    <label>Last name</label>
                    <input asp-for="LastName" disabled>
                </div>
            </div>

            <div class="form-group">
                <label>Email address</label>
                <input asp-for="Email" disabled>
            </div>

            <div class="form-group">
                <label>Phone Number</label>
                <input asp-for="PhoneNumber" disabled>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>City</label>
                    <input asp-for="City" disabled>
                </div>

                <div class="form-group">
                    <label>Street address</label>
                    <input asp-for="StreetAddress" disabled>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Role</label>
                    <input asp-for="Role" disabled>
                </div>

                @* <div class="form-group"> *@
                @*     <label>Number of farms</label> *@
                @*     <input asp-for="FirstName" disabled> *@
                @* </div> *@
            </div>

            <a asp-area="Admin" asp-action="Index" class="back-btn">Back to lest</a>
        </form>
    </div>
</main>
