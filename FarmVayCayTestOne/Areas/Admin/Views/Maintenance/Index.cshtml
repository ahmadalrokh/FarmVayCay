@using Farm.Models.Models
@model List<Maintenance>

<link rel="stylesheet" href="~/css/Tabels.css">
<div class="request-container">

    <div class="request-header">
        <h1 class="request-title">Maintenance List</h1>
        <div class="header-buttons">
            <a asp-area="Admin" asp-action="Upsert" class="header-btn export-btn">Add New One</a>
        </div>
        @* <div class="header-buttons"> *@
        @*     <a asp-area="Admin" asp-action="Upsert" class="header-btn export-btn">Add New One</a> *@
        @*     <a asp-area="Admin" asp-action="Index" asp-route-mager="FarmOwner" class="header-btn add-btn">Electrician</a> *@
        @*     <a asp-area="Admin" asp-action="Index" asp-route-mager="Admin" class="header-btn deleted-btn">Water</a> *@
        @*     <a asp-area="Admin" asp-action="Index" asp-route-mager="Admin" class="header-btn All-btn">Blacksmeth</a> *@
        @*     <a asp-area="Admin" asp-action="Index" asp-route-mager="Admin" class="header-btn deleted-btn">Garder Design</a> *@
        @* </div> *@
    </div>
    <table class="request-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Phone Number</th>
                <th>Service</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Location</td>
                    <td>@obj.PhoneNumber</td>
                    <td>@obj.Magor</td>
                    <td>
                        <div class="action-buttons">
                            <a class="view-button" asp-area="Admin" asp-action="Upsert" asp-route-Id="@obj.Id">
                                <i class="bi bi-eye-fill"></i>
                            </a>
                            <a class="delete-button" asp-area="Admin" asp-action="Delete" asp-route-Id="@obj.Id"
                               onclick="confirmDeletion()">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function confirmDeletion() {
        let userResponse = confirm("Are you sure you want to delete this User?");
        if (userResponse) {
            alert("Item deleted successfully!");
            // Here, you can add actual delete logic, like removing an element from the DOM
            document.getElementById("item").style.display = "none";
        } else {
            alert("Deletion canceled!");
        }
    }
</script>