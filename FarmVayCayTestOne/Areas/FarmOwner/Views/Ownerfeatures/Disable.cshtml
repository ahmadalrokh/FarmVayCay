@using Farm.Models.Models
@model FarmUnavailableDate

<link rel="stylesheet" href="~/css/FarmEdit.css" />
<div class="edit-container">
    <h2>Temporarily Disable Farm</h2>
    <form asp-action="Disable" method="post">
        <input type="hidden" asp-for="FarmId"  />
        <div class="form-group">
            <label>Select from Date</label>
            <input type="date" asp-for="UnavailableDateFrom" required min="@DateTime.Now.ToString("yyyy-MM-dd")" />
        </div>
        <div class="form-group">
            <label>Select to Date</label>
            <input type="date" asp-for="UnavailableDateTo" required min="@DateTime.Now.ToString("yyyy-MM-dd")" />
        </div>
        <div class="form-group">
            <label>Reason (optional)</label>
            <textarea asp-for="Reason" rows="3"></textarea>
        </div>

        <div class="form-group-btns">
            <button type="submit" class="btn-save">Confirm Disable</button>
            <a asp-action="MyFarms" class="btn-cancel">Cancel</a>
        </div>
    </form>
</div>
