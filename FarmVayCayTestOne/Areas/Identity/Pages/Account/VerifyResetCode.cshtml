@using Farm.Models.VM
@model VerifyResetCodeViewModel

<h2> Enter verification code </h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form method="post">
    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label>Enter the 4-digit verification code:</label>
        <input type="text" asp-for="Code" class="form-control" required maxlength="4" />
    </div>

    <button type="submit" class="btn btn-primary">تحقق</button>
</form>